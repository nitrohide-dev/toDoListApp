<BorderPane prefHeight="209.0" prefWidth="599.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.PasswordChangeCtrl">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <center>
        <GridPane prefHeight="163.0" prefWidth="519.0" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="291.0" minWidth="100.0" prefWidth="224.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="296.0" minWidth="100.0" prefWidth="295.0" />
                <ColumnConstraints maxWidth="157.0" minWidth="0.0" prefWidth="0.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="77.0" minHeight="30.0" prefHeight="57.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="65.0" minHeight="16.0" prefHeight="46.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="51.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="51.0" minHeight="30.0" prefHeight="37.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label prefHeight="25.0" prefWidth="265.0" text="Enter new password:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="20.0" />
                    </font></Label>
                <PasswordField fx:id="password" prefHeight="39.0" prefWidth="141.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font size="20.0" />
                    </font></PasswordField>

                <Button fx:id ="confirmButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="39.0" prefWidth="148.0" text="Confirm" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="20.0" />
                    </font></Button>
            <Label prefHeight="25.0" prefWidth="265.0" text="Repeat:" GridPane.rowIndex="1">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <PasswordField fx:id="password1" prefHeight="39.0" prefWidth="141.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="20.0" />
               </font>
            </PasswordField>
            </children>
        </GridPane>
    </center>
</BorderPane>
